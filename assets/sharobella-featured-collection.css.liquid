.sh-featured-collection {
    background: #f7f4f0;
}

.sh-featured-collection .sh-featured-collection__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 48px;
    @media all and (max-width: 840px) {
        padding: 0 16px;
    }
}

.sh-featured-collection .sh-featured-collection_titles {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 auto;
    gap: 12px;
    max-width: 490px;
}


.sh-featured-collection .sh-featured-collection__title {
    font-size: 14px;
    line-height: 24px;
    letter-spacing: 2px;
    color: #C6B081;
}

@media (max-width: 1024px) {
    .sh-featured-collection .sh-featured-collection__title {
        line-height: 18px;
    }
}

.sh-featured-collection .sh-featured-collection__description {
    font-weight: 400;
    font-size: 48px;
    line-height: 56px;
    color: #3e3229;
    margin: 0 0 32px 0;
}

@media (max-width: 1024px) {
    .sh-featured-collection .sh-featured-collection__description {
        font-size: 32px;
        line-height: 40px;
    }
}

.sh-featured-collection .product-card__image {
    position: relative;
    max-width: 348px;
    height: 400px;
    @media all and (max-width: 520px) {
        max-width: unset;
    }
}

.sh-featured-collection .product-card__image img {
    max-width: 100%;
    min-height: 100%;
    object-fit: cover;
}

.sh-featured-collection .product-card__badge {
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    line-height: 14px;
    min-width: 66px;
    text-align: center;
    position: absolute;
}

.sh-featured-collection .product-card--badge-top {
    background: #FFD64F;
    color: #2B2724;
    position: absolute;
    top: 12px;
    right: 8px;
}

.sh-featured-collection .product-card--badge-bottom {
  background: #3E3229;
  color: #fff;
  position: absolute;
  bottom: 12px;
  left: 8px;
}
.sh-featured-collection .product-card__tag {
    color: #817A75;
    font-weight: 400;
    font-size: 14px;
    line-height: 24px;
}

.sh-featured-collection .product-card__title {
    font-weight: 400;
    font-size: 18px;
    line-height: 26px;
    letter-spacing: 0;
    color: #3E3229;
    min-height: 52px;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.sh-featured-collection .product-card__info {
    padding: 0 8px;
}

.sh-featured-collection .product-card__price {
    font-weight: 600;
    font-size: 18px;
    line-height: 26px;
    letter-spacing: 0;
    color: #3E3229;
    width: 50%;
}

.sh-featured-collection .product-card__actions,
.sh-featured-collection .product-card--unavailable {
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: 62px;
}

.sh-featured-collection .product-card--unavailable-label {
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    letter-spacing: 0;
    color: #817A75;
}

.sh-featured-collection .product-card--unavailable-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 1px solid #E8E3DB;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sh-featured-collection add-to-cart-controller {
    display: flex;
    justify-content: flex-end;
    width: 50%;
}

.sh-featured-collection .product-card-wrap__add-to-cart {
    display: flex;
    justify-content: flex-end;
}

.sh-featured-collection .product-card__add-to-cart {
    border-radius: 50%;
    width: 48px;
    height: 48px;
    background: #4D4035;
    border: none;
    box-sizing: border-box;
}

.sh-featured-collection .product-card__add-to-cart:hover,
.sh-featured-collection .product-card__add-to-cart:focus,
.sh-featured-collection .product-card__add-to-cart:active {
    cursor: pointer;
}

.sh-featured-collection .product-card__quantity {
    border-radius: 100px;
    border: 1px solid #E8E3DB;
    padding: 12px 20px;
    align-items: end;
    display: flex;
}

.sh-featured-collection .product-card__quantity-btn {
    border: unset;
    color: #3E3229;
    font-size: 18px;
    background-color: transparent;
    padding: 0;
}
.sh-featured-collection .product-card__quantity-btn:hover,
.sh-featured-collection .product-card__quantity-btn:focus,
.sh-featured-collection .product-card__quantity-btn:active {
    cursor: pointer;
}

.sh-featured-collection .product-card__quantity-input {
    border: unset;
    background-color: transparent;
    color: #3E3229;
    font-weight: 600;
    font-size: 14px;
    line-height: 24px;
    width: 100%;
    text-align: center;
    -moz-appearance: textfield;
    -webkit-appearance: none;
    -moz-appearance: textfield;
    appearance: none;
    margin: 0;
}

.sh-featured-collection .product-card__quantity-input:focus-visible {
    outline: none;
    box-shadow: none;
}

.product-card__quantity-input::-webkit-outer-spin-button,
.product-card__quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
    display: none;
}

.sh-featured-collection__slide {
    border: 1px solid #f1ede8;
    padding: 12px;
    background: #f7f4f0;
    transition: all .3s ease;
    @media all and (max-width: 520px) {
        width: calc(65% - 26px)!important;
    }
}


.sh-featured-collection__slide:hover {
    border: 1px solid #C6B081;
    background: #f9f6f3;
    transform: scale(1.001);
}

.sh-featured-collection__cta-wrapper {
    display: flex;
    justify-content: center;
}

.sh-featured-collection__cta {
    background-color: #f3efe7;
    position: relative;
    min-width: 280px;
    min-height: 56px;
    border: 1px solid #C6B081;
    padding: 0;
    margin-top: 60px;
}

.sh-featured-collection__cta:not([disabled]):hover:after {
    box-shadow: unset;
    --border-offset: unset;
}

.sh-featured-collection__cta:before {
    content: "";
    position: absolute;
    top: -4px;
    left: -11px;
    right: unset;
    bottom: unset;
    width: 15px;
    height: 15px;
    transform: rotate(-64deg);
    display: block;
    z-index: 1;
    border-bottom: 1px solid #C6B081;
    background: #f7f4f0;
}

.sh-featured-collection__cta:after {
    content: "";
    position: absolute;
    top: calc(100% - 10px);
    left: -11px;
    width: 15px;
    height: 15px;
    transform: rotate(-118deg);
    display: block;
    z-index: 1;
    border-bottom: 1px solid #C6B081;
    box-shadow: none;
    background: #f7f4f0;
}

.sh-featured-collection__cta-inner{
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
}

.sh-featured-collection__cta-inner:before {
    content: "";
    position: absolute;
    top: -4px;
    left: calc(100% - 4px);
    width: 15px;
    height: 15px;
    border-bottom: 1px solid #C6B081;
    background: #f7f4f0;
    display: block;
    transform: rotate(67deg);
}

.sh-featured-collection__cta-inner:after {
    content: "";
    position: absolute;
    top: calc(100% - 10px);
    left: calc(100% - 4px);
    width: 15px;
    height: 15px;
    border-bottom: 1px solid #C6B081;
    display: block;
    transform: rotate(116deg);
    background: #f7f4f0;
}
.sh-featured-collection__cta-inner span {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #3E3229;
    font-size: 14px;
    line-height: 32px;
}

